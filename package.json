{
  "name": "Harmoney",
  "version": "1.2.0",
  "description": "Texting App For All.",
  "main": "main.js",
  "scripts": {
    "start": "electron ./main.js",
    "build": "electron-builder -p never --win",
    "build-cw": "electron-builder -p never --win",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "deploy": "node ./config/firebase-deploy.js"
  },
  "author": "ChezyName",
  "license": "MIT",
  "devDependencies": {
    "electron": "^16.0.6",
    "electron-builder": "^22.14.5",
    "jquery": "^3.6.0",
    "path": "^0.12.7"
  },
  "dependencies": {
    "@simonwep/pickr": "^1.8.2",
    "@terascope/fetch-github-release": "^0.8.7",
    "chokidar": "^3.5.2",
    "drag-drop": "^7.2.0",
    "electron-progressbar": "^2.0.1",
    "electron-updater": "^4.6.5",
    "firebase": "^8.10.1",
    "fs-extra": "^10.0.0",
    "open": "^8.4.0",
    "uaup-js": "latest",
    "uuidv1": "^1.6.14"
  },
  "build": {
    "appId": "",
    "productName": "Harmoney",
    "copyright": "Copyright Â© 2022 ChezyName",
    "mac": {
      "target": [
        "zip"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "ChezyName",
      "icon": "icon/icon.ico",
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "dmg": {
      "icon": ""
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chezyname",
        "repo": "harmoney",
        "private": false
      }
    ]
  }
}
